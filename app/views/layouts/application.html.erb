<!DOCTYPE html>
<html>
<head>
  <title>TripPlanner</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	
 <p class="notice"><%= notice %></p>
 <p class="alert"><%= alert %></p>
 
 <% if user_signed_in? %>
	<p align="right" > Signed in as <b> <%= current_user.email %></b>. </p>
	
	<p align="right"> <%= link_to "Log out", destroy_user_session_path, :method => :delete %> </p>
<% end %>

<%= yield %>

</body>
</html>
